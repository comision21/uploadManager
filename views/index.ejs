<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
  <%- include('partials/header') %>
  <div class="container">
    <div class="row mt-5">
      <h2>Productos con una SOLA imagen</h2>
      <hr>
      <% productsOneImage.forEach(({id,name,image}) => { %>
       <div class="col-12 col-md-3 col-lg-4">
        <div class="card">
          <div class="swiper-slide">
            <img src="/images/<%= image || 'default-placeholder.png' %>" alt="" class="card-img-top">
          </div>
          
          <div class="card-body">
            <h4 class="card-title"><%= name %></h4>
            <hr>
            <div class="d-flex gap-2 justify-content-end mt-3">
              <a href="/products-one-image/edit/<%= id %>" class="btn btn-outline-success"><i class="fa-regular fa-pen-to-square"></i></a>
              <form action="/products-one-image/delete/<%= id %>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger" type="submit"><i class="fa-regular fa-trash-can"></i></button>
              </form>
            </div>
          </div>
        </div>
       </div>
      <% }) %>

    </div>
    <div class="row mt-5">
      <h2>Productos con VARIAS im√°genes</h2>
      <hr>
      <% productsMultipleImages.forEach(({id,name,images}) => { %>
       <div class="col-12 col-md-3 col-lg-4">
        <div class="card">
          <div class="swiper mySwiper">
            <div class="swiper-wrapper">
              <% images.forEach(image => { %>
                <div class="swiper-slide">
                  <img src="/images/<%= image || 'default-placeholder.png' %>" alt="" class="card-img-top" >
                </div>
              <% }) %>
             
           
            </div>
          </div>
          <div class="card-body">
            <h4 class="card-title"><%= name %></h4>
            <hr>
            <div class="d-flex gap-2 justify-content-end mt-3">
              <a href="/products-one-image/edit/<%= id %>" class="btn btn-outline-success"><i class="fa-regular fa-pen-to-square"></i></a>
              <form action="/products-one-image/delete/<%= id %>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger" type="submit"><i class="fa-regular fa-trash-can"></i></button>
              </form>
            </div>
          </div>
        </div>
       </div>
      <% }) %>

    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
  <script>
    var swiper = new Swiper(".mySwiper", {});
  </script>
</body>
</html>
