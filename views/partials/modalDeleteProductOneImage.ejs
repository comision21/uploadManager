<!-- Modal -->
<div class="modal fade" id="deleteModalOneImage<%= id %>" tabindex="-1"
    aria-labelledby="deleteModalOneImage<%= id %>Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteModalOneImage<%= id %>Label">Advertencia</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/products-one-image/delete/<%= id %>?_method=DELETE" method="POST">
                    <h4 class="my-3 text-center">¿Estas seguro que querés eliminar el producto : <%= name %>?</h4>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button class="btn btn-danger" type="submit">Sí, eliminalo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>